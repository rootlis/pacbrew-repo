pkgname=ps5-payload-sdk
pkgver=git
pkgrel=1
pkgdesc="An SDK for PS5 payloads that uses dynamic linking"
arch=('any')
license=('GPLv3')
url="https://github.com/rootlis/sdk"
source=("git+$url.git")
sha256sums=('SKIP')
groups=('ps5-payload-dev')
options=(!strip libtool staticlibs)
makedepends=(clang18 llvm18 lld18 llvm18-libs)

prepare() {
    if [ -z "${PS5_PAYLOAD_SDK}" ]; then
	export PS5_PAYLOAD_SDK=/opt/ps5-payload-sdk
    fi
}

build() {
    export PATH="/usr/lib/llvm18/bin":$PATH
    CFLAGS=${CFLAGS/-fstack-clash-protection/}
    #CXXFLAGS="$CFLAGS"
    make -C sdk
}

package() {
    make -C sdk install DESTDIR="${pkgdir}/${PS5_PAYLOAD_SDK}"
}
